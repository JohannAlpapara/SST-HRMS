.list-group-item
  = link_to "#{user.email}", edit_admin_user_path(user)
  %span.badge.fa.fa-edit
    = link_to "Edit", edit_admin_user_path(user), :class => "badge"
  %span.badge.fa.fa-trash
    = link_to "Delete", "#", :class => "badge", :id => "user-#{user.id}", "data-toggle" => "modal", "data-target" => "#delete-confirmation", "data-href" => "#{admin_user_path(user)}"
  .description
    - user_team = Team.find_by_id(user.team_id)
    - user_team_name = user_team.nil? ? "Unknown Team" : "#{user_team.name} Team"
    = "ID: #{user.id} - #{user.full_name} - #{user_team_name}"