.container.clearfix
  = show_error_messages_if_any [flash[:error]]
  #user-search-form.well
    = form_tag(admin_users_search_path, method: :get) do
      .row
        .form-group.col-md-6
          = text_field_tag :email, params[:email], :placeholder => "Enter email", :type => "email", class: "form-control"
      .row
        .form-group.col-md-6
          = text_field_tag :first_name, params[:first_name], class: "form-control", :placeholder => "First Name", :type => "text"
      .row
        .form-group.col-md-6
          = text_field_tag :last_name, params[:last_name], class: "form-control", :placeholder => "Last Name", :type => "text"
      %button.btn.btn-primary{:type => "submit"}
        %i.fa.fa-search
          Search

  .add-button-link.btn-primary.fa.fa-user-plus
    = link_to "Create new user", new_admin_user_path

  #items-list.well.well-md.list-group
    - if @users
      - @users.to_a.each do |user|
        .list-group-item
          = link_to "#{user.email}", edit_admin_user_path(user)
          %span.badge.fa.fa-edit
            = link_to "Edit", edit_admin_user_path(user), :class => "badge"
          %span.badge.fa.fa-trash
            = link_to "Delete", admin_user_path(user), method: :delete, class: "badge", :id => "user-#{user.id}", "data-confirm" => "Are you sure you want to delete #{user.email}?"
          .description
            = "ID: #{user.id} - #{user.full_name}"

    .text-center
      = paginate @users
