.container.clearfix
  = show_error_messages_if_any [flash[:error]]
  = show_notice_message_if_any flash[:notice]
  .add-button-link.btn-primary.fa.fa-plus
    = link_to "Create new job", new_admin_job_path
  - if @jobs.any?
    %table.table.table-bordered.table-striped
      - @jobs.each do |job|
        = render :partial => "public/common/resource_view", locals: {:resource => job}

    .text-center
      = paginate @jobs

= render :partial => "public/common/confirmation"
