<div class = "article">
  <div class = "container">
    <div class = "col-sm-6 col-md-offset-3">
      <h2>Sign in</h2>
      <hr>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-default"}) do |f| %>
        <% messages = flash.map { |name, msg| msg }%>
        <%= show_error_messages_if_any messages %>
        
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <%= f.submit "SIGN IN", :class => "btn btn-primary" %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
