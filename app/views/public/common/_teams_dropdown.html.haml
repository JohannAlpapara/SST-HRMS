= f.label :team_id, "Belongs to team"
%select.form-control{:id => "#{f.object_name}_team_id", :name => "#{f.object_name}[team_id]", :disabled => !current_user.admin?}
  %option
  - Team.all.each do |team|
    %option{:value => "#{team.id}", :selected => resource.nil? ? false : team.id == resource.team_id}
      = team.name