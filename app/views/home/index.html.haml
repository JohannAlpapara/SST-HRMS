%article#my-carousel
  .container
    %section
      #carousel-teams.carousel.slide{"data-ride" => "carousel"}
        %ul.carousel-indicators
          %li.active{"data-slide-to" => "0", "data-target" => "#carousel-item"}
          %li{"data-slide-to" => "1", "data-target" => "#carousel-item"}
          %li{"data-slide-to" => "2", "data-target" => "#carousel-item"}
        .carousel-inner
          .item.active
            = image_tag("image1.jpg", alt: "...")
            .carousel-caption
          .item
            = image_tag("image2.jpg", alt: "...")
            .carousel-caption
          .item
            = image_tag("image3.jpg", alt: "...")
            .carousel-caption
        %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-teams", :role => "button"}
        %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-teams", :role => "button"}
          
