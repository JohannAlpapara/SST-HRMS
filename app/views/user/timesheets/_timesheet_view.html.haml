%tr
  %td.col-xs-1
    = x_editable [@user, timesheet], :working_date, :container => :a, :as => "combodate", :title => "Select date"
  %td.column-duration
    = x_editable [@user, timesheet], :duration, :container => :a, :as =>  "text", :title => "Enter duration"
  %td.col-xs-4
    = x_editable [@user, timesheet], :job_id, :container => :a, :as => "select", :source => "#{timesheet.available_jobs.to_json}", :display_as => "#{timesheet.job.name if timesheet.job}", :title => "Choose job"
  %td.col-xs-5
    = x_editable [@user, timesheet], :description, :container => :a, :as => "textarea", "data-title" => "Enter description"

  %td.col-edit
    %span.badge.fa.fa-edit
      = link_to "Edit", "#{edit_link_for timesheet}", :class => "badge", :id => "edit-timesheet-#{timesheet.id}"
  %td.col-delete
    %span.badge.fa.fa-trash
      = link_to "Delete", "#", :class => "badge", :id => "delete-timesheet-#{timesheet.id}", "data-toggle" => "modal", "data-target" => "#delete-confirmation", "data-href" => "#{link_for timesheet}"

:javascript
  enableXEditable();
