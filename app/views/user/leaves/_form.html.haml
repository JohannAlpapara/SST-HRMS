.article
  = form_for([:user, @leave], html: {class: "form-default"}) do |f|
    = show_error_messages_if_any @leave.errors.full_messages
    .form-group
      = f.label :leave_date
      = f.text_field :leave_date, autofocus: true, class: "form-control datepicker", value: @leave.leave_date ? format_date(@leave.leave_date) : format_date(Date.today)
    .form-group
      = f.label :leave_type, "Type"
      = f.select :leave_type, %w{Annual Sick Unpaid}, {}, {class: "form-control"}
    .form-group
      = f.label :duration
      = f.text_field :duration, autofocus: true, class: "form-control"
    .form-group
      = f.label :reason
      = f.text_area :reason, autofocus: true, class: "form-control"

    .actions
      %button.btn.btn-primary{:type => "submit"}
        %i.fa.fa-send
          SEND

:javascript
  enableDatePicker($(".datepicker"))
